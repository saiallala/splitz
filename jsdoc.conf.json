{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/category",
        "node_modules/better-docs/component"
    ],
    "templates": {
        "better-docs": {
            "name": "My React components"
          }
      },
    "opts": {
        "destination": "docs",
        "template": "my-template",
        "recurse": true,
        "readme": "README.md"
    }
}
